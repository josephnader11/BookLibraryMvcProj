@model BookLibraryMvcProj.Models.BookCategory

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h2 class="text-info">👁 Category Details</h2>
    <div class="card shadow-lg p-3">
        <div class="card-body">
            <h4 class="card-title text-primary">@Model.Name</h4>
            <p><strong>Category ID:</strong> @Model.BookCategoryId</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.BookCategoryId" class="btn btn-warning">✏️ Edit</a>
        <a asp-action="Index" class="btn btn-secondary">🔙 Back to List</a>
    </div>
</div>