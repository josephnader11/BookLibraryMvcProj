@model BookLibraryMvcProj.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-4">
    <h2 class="text-warning">✏️ Edit Book</h2>

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="card shadow-lg p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title" class="control-label">📖 Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Year" class="control-label">📅 Year</label>
            <input asp-for="Year" type="number" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AuthorId" class="control-label">👤 Author</label>
            <select asp-for="AuthorId" class="form-control">
                <option value="">-- Select Author --</option>
                @if (ViewBag.Authors != null)
                {
                    @foreach (var author in (List<Author>)ViewBag.Authors)
                    {
                        <option value="@author.AuthorId">@author.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookCategoryId" class="control-label">📚 Category *</label>
            <select asp-for="BookCategoryId" class="form-control">
                <option value="">-- Select Category --</option>
                @if (ViewBag.Categories != null)
                {
                    @foreach (var category in (List<BookCategory>)ViewBag.Categories)
                    {
                        <option value="@category.BookCategoryId">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="BookCategoryId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="💾 Save Changes" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-secondary">🔙 Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}